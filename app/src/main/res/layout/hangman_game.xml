<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameTitle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    tools:context=".TicTacToeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cowboymovie"
            android:text="H A N G M A N"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textColor="#C8230D"
            android:textSize="50sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:padding="50dp">

        <TextView
            android:id="@+id/highscore"
            android:layout_width="274dp"
            android:layout_height="match_parent"
            android:text="ðŸ‘‘High Score:                                 "
            android:textSize="20sp" />
        <ImageButton
            android:id="@+id/pause"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            app:srcCompat="@drawable/q" />

    </LinearLayout>

    <ImageView
        android:id="@+id/hangman"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/topBar"
        android:layout_centerHorizontal="true"

        app:srcCompat="@drawable/hone" />

    <LinearLayout
        android:id="@+id/letterRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hangman"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/firstLetter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="_"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/secondLetter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="_"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/thirdLetter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="_"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/fourthLetter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="_"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/fifthLetter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="_"
            android:gravity="center"
            android:textSize="30sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/guess"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/letterRow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Make a guess!"
        android:inputType="text"
        android:padding="12dp"
        android:background="@android:drawable/edit_text" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guess"
        android:backgroundTint="#DC4949"
        android:padding="12dp"
        android:layout_centerHorizontal="true"
        android:text="Confirm Guess" />

    <TextView
        android:id="@+id/letterBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_button"
        android:layout_marginTop="20dp"
        android:text="Letters you have already guessed will appear here."
        android:gravity="center"
        android:textSize="20sp"
        android:padding="10dp" />

</RelativeLayout>
