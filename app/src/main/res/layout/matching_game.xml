<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/game_background"
    android:padding="20dp"
    tools:context=".MatchingMenuActivity">

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¯ Shapes Match-Up!"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/highScoreText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ‘‘ High Score: 0"
            android:textSize="24sp"
            android:textStyle="italic"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/pause"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            app:srcCompat="@drawable/q" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <GridLayout
            android:id="@+id/shapeGrid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="3"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/circleShape"
                android:layout_width="123dp"
                android:layout_height="89dp"
                android:layout_margin="16dp"
                android:contentDescription="Circle"
                android:src="@drawable/circle" />

            <ImageView
                android:id="@+id/squareShape"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/square"
                android:contentDescription="Square"
                android:layout_margin="16dp" />

            <ImageView
                android:id="@+id/triangleShape"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/triangle"
                android:contentDescription="Triangle"
                android:layout_margin="16dp" />
        </GridLayout>

        <GridLayout
            android:id="@+id/nameGrid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="3"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/circleBtn"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="#DC4949"
                android:text="Circle"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/squareBtn"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="#DC4949"
                android:text="Square"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/triangleBtn"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="#DC4949"
                android:text="Triangle"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </GridLayout>

    </LinearLayout>

</LinearLayout>
